{
  "name": "epidemia",
  "version": "0.0.0",
  "private": true,
  "description": "Pandemic Epidemic Forecaster",
  "scripts": {
    "build": "parcel build src/index.html --public-url /epidemia/",
    "coverage": "codecov --file=coverage/coverage-final.json",
    "fmt": "tslint --fix --force --project tsconfig.json && prettier --write 'src/**/*'",
    "lint": "tslint --project tsconfig.json",
    "spec": "jest",
    "start": "parcel src/index.html",
    "style": "prettier --list-different 'src/**/*'",
    "test": "npm run lint && npm run style && npm run spec"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pspeter3/epidemia.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pspeter3/epidemia/issues"
  },
  "homepage": "https://github.com/pspeter3/epidemia#readme",
  "dependencies": {
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-router-dom": "^4.2.2",
    "tslib": "^1.9.1"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.10",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/jest": "^22.2.3",
    "@types/react": "^16.3.14",
    "@types/react-dom": "^16.0.5",
    "@types/react-router-dom": "^4.2.6",
    "codecov": "^3.0.2",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "jest": "^22.4.4",
    "node-sass": "^4.9.0",
    "parcel-bundler": "^1.8.1",
    "prettier": "^1.12.1",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3"
  },
  "jest": {
    "collectCoverage": true,
    "globals": {
      "ts-jest": {
        "enableTsDiagnostics": true,
        "skipBabel": true
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/util/test_bootstrap.ts",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testRegex": "_spec\\.(ts|tsx)$",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 4,
    "trailingComma": "all"
  }
}
